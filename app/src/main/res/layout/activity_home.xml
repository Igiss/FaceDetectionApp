<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:gravity="clip_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context=".Home">

    <!-- Toolbar -->

    <androidx.appcompat.widget.Toolbar
        app:title="Hệ thống nhận diện khuôn mặt"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1565C0"
        app:titleTextColor="#FFFFFF"
        android:layout_marginBottom="50dp"
        android:theme="?attr/actionBarTheme" />


    <!-- Button Thêm khuôn mặt -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddFace"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/white"
        android:text="Thêm khuôn mặt mới"
        android:textColor="@android:color/black"
        app:icon="@drawable/addface"
        app:iconGravity="start" />

    <!-- Button Danh sách khuôn mặt -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnListFace"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/white"

        android:text="Danh sách khuôn mặt"
        android:textColor="@android:color/black"
        app:icon="@drawable/listface"
        app:iconGravity="start" />

    <!-- Button Nhận diện khuôn mặt -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFaceDetection"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/white"

        android:text="Nhận diện khuôn mặt"
        android:textColor="@android:color/black"
        app:icon="@drawable/detectfaces"
        app:iconGravity="start" />



</LinearLayout>
